<div class="flex flex-col w-2/3 mx-auto h-full items-center justify-between">
  <div class="flex flex-row justify-end h-1/4 w-full">
    <a href="/myurls" class="mt-5 btn bg-primary hover:opacity-60 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline text-center">
    My URLs
    </a>
  </div>
  <div class=" flex flex-row h-1/2 rounded-lg px-8 pt-6 pb-8 mb-4 border-4 border-dashed">
    <div class="flex flex-col w-1/2 justify-center">
      <h1 class="text-6xl lg:text-8xl font-bold mb-10 text-center text-white">MiniURL</h1>
      <p class="text-xl mb-6 text-center text-white mx-3">
        Enter the URL you want to shorten and click "Shorten URL."
      </p>
    </div>
    <%= form_with model: @url, local: true, class: "w-1/2 ml-4 flex flex-col justify-center space-y-4" do |form| %>
      <div>
        <%= form.label :target_url, "Enter URL to shorten", class: "block text-white text-sm font-bold mb-4" %>
        <%= form.text_field :target_url, placeholder: "https://example.com", class: "shadow appearance-none border rounded py-2 px-3 text-secondary leading-tight focus:outline-none focus:shadow-outline w-full" %>
      </div>
      
      <div>
        <%= form.submit "Shorten URL", class: "w-full bg-primary hover:opacity-60 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-1/2" %>
      </div>
    <% end %>
  </div>
  <div class="h-1/4"></div>
</div>